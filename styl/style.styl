
#main
    background      black
    position        absolute 
    left            0
    top             0
    right           0
    bottom          0
    padding         0
    margin          0
    overflow        hidden
    
svg
    width           100%
    height          100%
    stroke-width    10px
    stroke          white
    fill            none
  
.menu
