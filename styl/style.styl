
#main
    font-family     sans-serif
    color           #222
    background      black
    position        absolute 
    left            0
    top             0
    right           0
    bottom          0
    padding         0
    margin          0
    overflow        hidden
    user-select         none
    -moz-user-select    none
    -webkit-user-select none
    
svg
    width           100%
    height          100%
    stroke-width    10px
    stroke          white
    fill            none
  
.menul
    position        absolute
    top             0
    left            0

.menur
    position        absolute
    top             0
    right           0
    
.choice
.inline
    display         inline-block
    
.choice
.button
    padding         1em
    padding-bottom  0
    
.button
    display         inline-block
    cursor          pointer
    &:hover 
        color       white
    color           #444
    &.highlight
    &.bot
        color       #f00
    &.usr
        color       #fff
    
.menur .button
    display         block
        
.line
    &.usr
        stroke      #fff
        &.tmp
            stroke  #88f
    &.bot
        stroke      #f00
        &.tmp
            stroke  #ff0
    pointer-events  none
    stroke-linecap  round
    stroke-linejoin bevel
    
.grph
    stroke-width    1
    fill            none
    &.usr
        stroke      #fff
    &.bot
        stroke      #f00
    
.dot
    pointer-events  all
    stroke-width    0.1
    fill            #000
    stroke          #555    
    &.bot
        stroke      none
        fill        #f00
    &.usr
        stroke      none
        fill        #fff
        &.linked:hover      
            cursor  pointer
    &.src    
        fill        #88f
.pie
    pointer-events  none
    stroke          none
    fill            #000
    
.dbg
    stroke          #88f
    stroke-width    1
    
.msg
    font-size       50px
    opacity         0.5
    color           #fff
    